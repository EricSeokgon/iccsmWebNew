//////////////////////////////////////////////////////////////////
// Form 이벤트
//////////////////////////////////////////////////////////////////
function fnForm_Loaded(obj)
{
	obj = object("global.MainMenu.sub_img2");
	obj.ImageID = "left_menu2_2_on";
	obj.Color = "#FFFFFF";

	obj = object("global.MainMenu.sub_img1");
	obj.ImageID = "left_menu2_1";
	obj.Color = "#1C3C5A";
	
	//검색일자를 일주일전으로 초기화	
	scDATE1.Value = AddDate(Today(), -7);
	global.gv_WorkFlag = global.gv_INQUIRY;
	fnInitButtonBar();
	divButtonBar.Image1.text = space(6) + "영업정지 현황";
	
	fnGetCode();
		//초기화
	traceControl( this );
	if(pscMode=="T"){
		fnControlInit("pscDATE1,pscDATE2,pscCOM_NAME,pscWRT_NUM,pscSIDO_CODE",this);
		fnTablesBinding();
	}
	
}

function fnForm_Activate(obj)
{
	global.g_activeFrm = this.Id;
}

